rm -f genmake_tcomp*

printf "  Do we have the etime() command using $FC...  "
cat > genmake_tcomp.$FS <<EOF
      program hello
      REAL*4 ACTUAL, TARRAY(2)
      EXTERNAL ETIME
      REAL*4 ETIME
      actual = etime( tarray )
      print *, tarray
      end
EOF
$FC $FFLAGS -o genmake_tcomp genmake_tcomp.$FS > genmake_tcomp.log 2>&1
